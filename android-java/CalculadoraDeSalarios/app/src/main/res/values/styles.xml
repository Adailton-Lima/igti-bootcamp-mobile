<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:statusBarColor">@color/header_background_dark</item>
        <item name="android:navigationBarColor">@color/header_secondary_background</item>

        <item name="colorPrimary">@color/header_background</item>
        <item name="colorPrimaryVariant">@color/header_background_dark</item>
        <item name="colorOnPrimary">@color/text_dark</item>
        <item name="colorSecondary">@color/header_secondary_background</item>
        <item name="colorSecondaryVariant">@color/header_secondary_background_dark</item>
        <item name="colorOnSecondary">@color/text_dark</item>

        <item name="backgroundColor">@color/page_background</item>

        <item name="materialButtonStyle">@style/AppTheme.Buttons</item>
        <item name="textInputStyle">@style/AppTheme.Inputs</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.OverflowButtonStyle</item> <!-- Ã¬cone da navbar -->
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- buttons -->
    <style name="AppTheme.Buttons" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/header_secondary_background</item>
    </style>

    <!-- inputs -->
    <style name="AppTheme.Inputs" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="backgroundTint">@color/input_background</item>
        <item name="strokeColor">@color/input_border</item>
        <item name="colorOnPrimary">@color/input_icon</item>
        <item name="actionMenuTextColor">@color/text_dark</item>
    </style>

    <!-- NavBar -->
    <style name="AppTheme.NavBar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AppTheme.NavBar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AppTheme.NavBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="iconTint">@color/text_dark</item>
        <item name="titleTextColor">@color/text_dark</item>
        <item name="subtitleTextColor">@color/material_on_primary_emphasis_medium</item>
        <item name="android:textColorSecondary">@color/text_dark</item>
        <item name="backgroundTint">@color/text_dark</item>
    </style>

    <style name="AppTheme.OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="backgroundTint">@color/text_dark</item>
    </style>


